import sqlite3

def inicjalizuj_baze():
    conn = sqlite3.connect('sklep.db')
    cursor = conn.cursor()

    # Tworzenie tabeli Kategoria
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS kategoria (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            nazwa TEXT NOT NULL,
            opis TEXT
        )
    ''')

    # Tworzenie tabeli Produkty (z kluczem obcym do Kategoria)
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS produkty (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            nazwa TEXT NOT NULL,
            liczba INTEGER,
            cena REAL,
            kategoria_id INTEGER,
            FOREIGN KEY (kategoria_id) REFERENCES kategoria (id)
        )
    ''')
    
    conn.commit()
    return conn

def dodaj_kategorie(conn, nazwa, opis):
    sql = 'INSERT INTO kategoria (nazwa, opis) VALUES (?, ?)'
    cur = conn.cursor()
    cur.execute(sql, (nazwa, opis))
    conn.commit()
    print(f"Dodano kategorię: {nazwa}")

def dodaj_produkt(conn, nazwa, liczba, cena, kategoria_id):
    sql = 'INSERT INTO produkty (nazwa, liczba, cena, kategoria_id) VALUES (?, ?, ?, ?)'
    cur = conn.cursor()
    cur.execute(sql, (nazwa, liczba, cena, kategoria_id))
    conn.commit()
    print(f"Dodano produkt: {nazwa}")

def wyswietl_wszystko(conn):
    cur = conn.cursor()
    print("\n--- LISTA PRODUKTÓW Z KATEGORIAMI ---")
    query = '''
        SELECT p.id, p.nazwa, p.liczba, p.cena, k.nazwa 
        FROM produkty p
        JOIN kategoria k ON p.kategoria_id = k.id
    '''
    cur.execute(query)
    for row in cur.fetchall():
        print(f"ID: {row[0]} | Nazwa: {row[1]} | Ilość: {row[2]} | Cena: {row[3]} zł | Kategoria: {row[4]}")

# --- GŁÓWNA LOGIKA PROGRAMU ---
if _name_ == "_main_":
    polaczenie = inicjalizuj_baze()

    # Przykładowe dane
    dodaj_kategorie(polaczenie, "Elektronika", "Urządzenia elektroniczne i gadżety")
    dodaj_kategorie(polaczenie, "Dom", "Artykuły gospodarstwa domowego")

    dodaj_produkt(polaczenie, "Laptop", 5, 3500.00, 1)
    dodaj_produkt(polaczenie, "Myszka", 20, 150.50, 1)
    dodaj_produkt(polaczenie, "Czajnik", 10, 89.99, 2)

    wyswietl_wszystko(polaczenie)
    polaczenie.close()
